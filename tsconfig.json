{
  "compilerOptions": {
      "allowJs": false,
        "experimentalDecorators": true,
        "target": "es2016",
        "module": "commonjs",
        "lib": ["es2017", "es7", "es6"],
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "noImplicitAny": false,
        "strictNullChecks": false,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": false,
        "emitDecoratorMetadata": true,
    },
    "exclude": [
            "node_modules",
            "dist"
    ]
}

